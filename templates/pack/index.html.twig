{% extends 'base.html.twig' %}

{% block title %}Pack index{% endblock %}

{% block body %}
    <h1>Pack index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pack in packs %}
            <tr>
                <td>{{ pack.id }}</td>
                <td>{{ pack.type }}</td>
                <td>
                    <a href="{{ path('pack_show', {'id': pack.id}) }}">show</a>
                    <a href="{{ path('pack_edit', {'id': pack.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pack_new') }}">Create new</a>
{% endblock %}
